---
import Layout from '~/layouts/PageLayout.astro';
import Changelog from '~/components/widgets/Changelog';
import RecognitionAwards from '~/components/widgets/RecognitionAwards.astro';

import { getCanonical, getPermalink } from '~/utils/permalinks';

const meta = {
	title: 'Liran Tal recognitions and achievements from the community',
	description:
		'A changelog of assorted community appreciation and recognition as well as personal and professional milestones and achievements for Liran Tal.',
	canonical: getCanonical(getPermalink(Astro.url.pathname)),
};
---

<Layout {meta}>
	<section>
		<RecognitionAwards />

		<div class="max-w-6xl mx-auto px-4 sm:px-6">
			<div class="py-4 md:pt-20">
				<div class="text-center pb-4 md:pb-4">
					<div>
						<h2 class="mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl">
							<span class="text-transparent bg-clip-text bg-gradient-to-r to-purple-600 from-red-500">
								Appreciation & Milestones
							</span>
						</h2>
						<div class="container mx-auto lg:px-48">
							<p class="text-lg font-normal text-gray-500 lg:text-xl dark:text-gray-400">
								A changelog of assorted community appreciation and recognition as well as personal and professional
								milestones and achievements for Liran Tal.
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<Changelog client:visible />
</Layout>
