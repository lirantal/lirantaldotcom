---
import { Icon } from 'astro-icon';
import { PROFILE } from '~/config.mjs';
import { getHomePermalink } from '~/utils/permalinks';

export const FOOTER = {
	published_author_links: [
		{
			title: 'Published Author',
			items: [
				{
					// @TODO update data
					title: 'Node.js Secure Coding: Defending Against Command Injection Vulnerabilities',
					icon: 'emojione:hot-pepper',
					link: 'https://nodejs-secure-coding.lemonsqueezy.com/checkout?cart=500f9b52-0197-475e-a0f2-17de92d009b2',
				},
				{
					title: 'Essential Node.js Security',
					link: 'https://leanpub.com/nodejssecurity',
				},
				{
					title: "O'Reilly Serverless Security",
					link: 'https://www.oreilly.com/library/view/serverless-security/9781492082538/',
				},
			],
		},
	],
	author_profile_links: [
		{
			title: 'GitHub Star 2023',
			link: 'https://stars.github.com/profiles/lirantal/',
			icon: 'emojione:glowing-star',
		},
		{
			title: 'Pathfinder Award for Security',
			link: 'https://openjsf.org/announcement/2022/06/07/',
			icon: 'logos:openjs-foundation-icon',
		},
	],
};
---

<footer class="border-t border-gray-200 dark:border-slate-800">
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
			<div class="col-start-3 col-end-6">
				<div class="mb-2">
					<a class="inline-block font-bold text-xl" href={getHomePermalink()}>Liran Tal</a>

					<ul class="text-sm">
						<li class="mb-2">
							<a
								class="text-gray-600 hover:text-gray-700 dark:text-gray-400 transition duration-150 ease-in-out"
								href="/recognitions"
							>
								Award-winning security champion, open source advocate, and self-published author.
							</a>
						</li>
					</ul>
					<ul class="text-sm">
						{
							FOOTER.author_profile_links.map((item) => {
								return (
									<li class="mb-2">
										{item.icon ? <Icon name={item.icon} class="inline-flex w-5 h-5" /> : ''}
										<a
											class="text-gray-600 hover:text-gray-700 dark:text-gray-400 transition duration-150 ease-in-out"
											href={item.link}
										>
											{item.title}
										</a>
									</li>
								);
							})
						}
					</ul>
				</div>
				<div class="text-sm text-gray-600">
					<!-- @TODO 
					<a
						class="text-gray-600 hover:text-gray-700 dark:text-gray-400 hover:underline transition duration-150 ease-in-out"
						href="#">Terms</a
					> ·
					<a
						class="text-gray-600 hover:text-gray-700 dark:text-gray-400 hover:underline transition duration-150 ease-in-out"
						href="#">Privacy Policy</a
					> -->
				</div>
			</div>

			{
				FOOTER.published_author_links.map((column) => {
					return (
						<>
							<div class="col-start-8 col-end-12">
								<div class="text-gray-800 dark:text-gray-300 font-medium mb-2">{column.title}</div>
								<ul class="text-sm">
									{column.items.map((item) => {
										return (
											<li class="mb-2">
												<div class="flex">
													<div class="flex items-center">
														{item.icon ? <Icon name={item.icon} class="w-5 h-5" /> : ''}
													</div>
													<div class={`flex ml-${item.icon ? '3' : '8'}`}>
														<a class=" text-gray-600 hover:text-gray-700 dark:text-gray-400" href={item.link}>
															{item.title}
														</a>
													</div>
												</div>
											</li>
										);
									})}
								</ul>
							</div>
						</>
					);
				})
			}
		</div>
		<div class="md:flex md:items-center md:justify-between py-6 md:py-8">
			<ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0">
				<li>
					<a
						class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
						aria-label="RSS"
						href="/rss.xml"
					>
						<Icon name="tabler:rss" class="w-5 h-5" />
					</a>
				</li>
				<li>
					<a
						class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
						aria-label="LinkedIn"
						href={PROFILE.linkedinURL}
					>
						<Icon name="tabler:brand-linkedin" class="w-5 h-5" />
					</a>
				</li>
				<li>
					<a
						class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
						aria-label="Twitter"
						href={PROFILE.twitterURL}
					>
						<Icon name="tabler:brand-twitter" class="w-5 h-5" />
					</a>
				</li>
				<li>
					<a
						class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
						aria-label="Github"
						href={PROFILE.githubURL}
					>
						<Icon name="tabler:brand-github" class="w-5 h-5" />
					</a>
				</li>
				<li>
					<a
						class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
						aria-label="Mastodon"
						href={PROFILE.mastodonURL}
						rel="me"
					>
						<Icon name="mdi:mastodon" class="w-5 h-5" />
					</a>
				</li>
			</ul>

			<div class="text-xs text-gray-700 mr-4 dark:text-slate-400">
				<div class="mb-2">© 2022 Liran Tal</div>

				<div>
					<!--
					@TODO logo distracting, moving out for now
					<span 
					class="w-5 h-5 md:w-6 md:h-6 md:-mt-0.5 bg-cover mr-1.5 float-left rounded-sm bg-[url(https://onwidget.com/favicon/favicon-32x32.png)]"
					</span>
				> -->

					Made by <a class="text-blue-600 hover:underline dark:text-gray-200" href="https://onwidget.com/"> onWidget</a>
					· All rights reserved.
				</div>
			</div>
		</div>
	</div>
</footer>
